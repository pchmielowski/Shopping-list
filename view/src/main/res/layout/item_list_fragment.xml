<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/item_list"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <EditText
            android:id="@+id/new_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/label_new_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textAutoCorrect"
            android:importantForAutofill="no"
            tools:targetApi="o"/>

    <TextView
            android:labelFor="@id/new_item_quantity"
            app:layout_constraintEnd_toStartOf="@id/new_item_quantity"
            android:id="@+id/label_quantity"
            app:layout_constraintBottom_toBottomOf="@id/new_item_quantity"
            app:layout_constraintTop_toTopOf="@id/new_item_quantity"
            android:text="@string/label_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/new_item_quantity"
            app:layout_constraintEnd_toEndOf="@id/new_item_name"
            app:layout_constraintTop_toBottomOf="@id/new_item_name"
            android:layout_width="wrap_content"
            android:ems="4"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            tools:targetApi="o"/>

    <androidx.constraintlayout.widget.Group
            app:constraint_referenced_ids="new_item_quantity,new_item_name,label_quantity"
            android:id="@+id/entering_new_item"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/add_new_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
